     
     
 <div class="container" style="margin-bottom: 200px;">
            <h1 id="title" style="font-size: 2.5em; margin-bottom: 20px; text-align: left;"></h1>

            <div class="proizvod" style="display: flex; flex-wrap: wrap; gap: 30px;">

                <!-- Slajder -->
                <div class="slider-container"
                    style="position: relative; flex: 1 1 55%; max-width: 600px; height: 400px; overflow: hidden; background: #ddd;">
                    <div id="slider" class="slider"></div>
                    <button class="arrow left"
                        style="position: absolute; top: 50%; left: 10px; transform: translateY(-50%); font-size: 32px; color: white; background: rgba(0,0,0,0.5); border: none; padding: 8px 12px; cursor: pointer; z-index: 2;">&#10094;</button>
                    <button class="arrow right"
                        style="position: absolute; top: 50%; right: 10px; transform: translateY(-50%); font-size: 32px; color: white; background: rgba(0,0,0,0.5); border: none; padding: 8px 12px; cursor: pointer; z-index: 2;">&#10095;</button>
                </div>

                <!-- Tekst -->
                <div class="content"
                    style="flex: 1 1 40%; max-width: 500px; display: flex; flex-direction: column; justify-content: start;">
                    <p id="paragraph" style="margin-bottom: 20px; font-size: 18px;"></p>
                    <ul id="features" style="padding-left: 20px;"></ul>
                </div>
            </div>

            <!-- Lightbox -->
            <div id="lightbox"
                style="position: fixed; display: none; justify-content: center; align-items: center; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.8); z-index: 999;">
                <span id="lightbox-close"
                    style="position: absolute; top: 20px; right: 30px; font-size: 40px; color: white; cursor: pointer;">&times;</span>
                <img id="lightbox-img" src="" style="max-width: 90%; max-height: 90%;" />
            </div>

            <script>
            async function loadData() {
                try {
                    const response = await fetch('proizvodi/json/poliform-concord.json');
                    const data = await response.json();

                    document.getElementById('title').textContent = data.title;
                    document.getElementById('paragraph').textContent = data.paragraph;

                    const featuresList = document.getElementById('features');
                    data.features.forEach(f => {
                        const li = document.createElement('li');
                        li.textContent = f;
                        li.style.marginBottom = "8px";
                        featuresList.appendChild(li);
                    });

                    const slider = document.getElementById('slider');
                    let slides = [];
                    let current = 0;

                    for (let i = 1; i <= data.imageCount; i++) {
                        const img = document.createElement('img');
                        img.src = `${data.imageFolder}/${i}.jpg`;
                        img.style.width = "100%";
                        img.style.height = "100%";
                        img.style.objectFit = "cover";
                        img.style.display = i === 1 ? "block" : "none";
                        img.style.transition = "opacity 0.5s";
                        img.classList.add('slide');
                        slider.appendChild(img);
                        slides.push(img);
                    }

                    function showSlide(index) {
                        slides.forEach((slide, i) => {
                            slide.style.display = i === index ? "block" : "none";
                        });
                    }

                    document.querySelector('.arrow.left').addEventListener('click', () => {
                        current = (current - 1 + slides.length) % slides.length;
                        showSlide(current);
                    });

                    document.querySelector('.arrow.right').addEventListener('click', () => {
                        current = (current + 1) % slides.length;
                        showSlide(current);
                    });

                    // Lightbox
                    const lightbox = document.getElementById('lightbox');
                    const lightboxImg = document.getElementById('lightbox-img');
                    const lightboxClose = document.getElementById('lightbox-close');

                    slider.addEventListener('click', (e) => {
                        if (e.target.tagName === 'IMG') {
                            lightboxImg.src = e.target.src;
                            lightbox.style.display = 'flex';
                        }
                    });

                    lightboxClose.addEventListener('click', () => {
                        lightbox.style.display = 'none';
                    });

                    lightbox.addEventListener('click', (e) => {
                        if (e.target === lightbox) {
                            lightbox.style.display = 'none';
                        }
                    });

                } catch (error) {
                    console.error('Greška pri učitavanju JSON fajla:', error);
                }
            }

            loadData();
            </script>
        </div>