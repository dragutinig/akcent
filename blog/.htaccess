<IfModule mod_rewrite.c>
    RewriteEngine On

    # Uvek koristi PHP početnu za /blog/ direktorijum
    DirectoryIndex php/index.php

    # Legacy /php URL-ovi -> čisti URL u ISTOM direktorijumu (radi i u podfolderu)
    RewriteRule ^php/?$ ./ [L,R=302]
    RewriteCond %{THE_REQUEST} \s+[^\s]*php/index\.php[\s?] [NC]
    RewriteRule ^php/index\.php$ ./ [L,R=302]

    # Blog početna
    RewriteRule ^$ php/index.php [L,QSA]

    # /admin -> dashboard
    RewriteRule ^admin/?$ php/dashboard.php [L,QSA]

    # Post: /kategorija/slug
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^([^/]+)/([^/]+)/?$ php/post.php?category=$1&slug=$2 [L,QSA]

    # Kategorija: /slug
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^([^/]+)/?$ php/category.php?slug=$1 [L,QSA]
</IfModule>

Options -Indexes

<FilesMatch "\.(htaccess|htpasswd|ini|log|env)">
    Order allow,deny
    Deny from all
</FilesMatch>
